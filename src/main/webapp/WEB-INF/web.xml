<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <!--FILTERS-->
    <filter>
        <filter-name>AdminSecurityFilter</filter-name>
        <filter-class>com.gordeev.onlinestore.web.filter.AdminSecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>UserSecurityFilter</filter-name>
        <filter-class>com.gordeev.onlinestore.web.filter.UserSecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ContentTypeFilter</filter-name>
        <filter-class>com.gordeev.onlinestore.web.filter.ContentTypeFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>UserSecurityFilter</filter-name>
        <url-pattern>/cart</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminSecurityFilter</filter-name>
        <url-pattern>/product/add/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminSecurityFilter</filter-name>
        <url-pattern>/product/edit/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminSecurityFilter</filter-name>
        <url-pattern>/product/delete/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ContentTypeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--SERVLETS-->
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.ProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.AddProductServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddToCartPageServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.AddToCartPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CartPageServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.CartPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.DeleteProductServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.EditProductServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.security.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.gordeev.onlinestore.web.servlet.security.LogoutServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddToCartPageServlet</servlet-name>
        <url-pattern>/product/cart/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CartPageServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/product/delete/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/product/edit/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>


</web-app>